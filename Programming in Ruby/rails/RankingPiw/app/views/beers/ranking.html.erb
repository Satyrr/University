<header>
  <h1>Ranking piw</h1>
</header>

<div id="content">
	<% pos=1 %>
	<% @beers.each do |beer| %>
	<div class="beer">
		<a href="<%= beer_path(beer) %>">
		  <%= image_tag beer.img, class: "beer_img" %>
		  <div class="info">
			  <p><strong><%= pos.to_s + ". " + beer.title %></strong></p>
			  <p><strong>Typ: </strong><%= beer.type.title %></p>
			  <p><strong>Browar:</strong><%= beer.brewery %></p>
			  <p><strong>Alk: </strong><%= beer.alc.to_s + "%" %></p>
			  <p><strong>Ocena:</strong><%= beer.score.to_s %></p>
		  </div>
		</a>
	</div>
	<% pos += 1%>
<% end %>
</div>
