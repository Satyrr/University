@section Scripts {
    <script>
        $(document).ready(function () {
            $("input").bind('input', validate);
            $("button").click(validate);

            function validate()
            {
                var formdata = $("input").serializeArray(); // serialize form
                $.get("Zad1Validation", formdata, function (res) {
                    $("#errors").html(res)
                });
            }
        });
    </script>
}



